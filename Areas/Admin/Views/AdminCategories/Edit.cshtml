@model TinTucCongNghe.Models.Category

@{
    ViewData["Title"] = "Sửa";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h4>Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatId" />
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label for="inputEmail4">Tên danh mục</label>
                    <input type="text" class="form-control" asp-for="CatName">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Sắp xếp</label>
                    <input type="text" class="form-control" asp-for="Ordering">
                </div>
                <div class="form-group col-md-6">
                    <div class="checkbox">
                        <input asp-for="IsPublish" type="checkbox">
                        <label for="IsPublish">Publish</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>